    "systeminformation": "^5.18.5"
  },
  "devDependencies": {
    "@iobroker/testing": "^4.1.0",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/gulp": "^4.0.11",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.1",
    "@types/proxyquire": "^1.3.28",
