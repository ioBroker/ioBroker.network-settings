  "description": "This adapter is used to anonymously collect the data on the central server for scientific research",
  "author": {
    "name": "bluefox",
    "email": "dogafox@gmail.com"
  },
  "homepage": "https://github.com/ioBroker/ioBroker.network-settings",
  "license": "MIT",
  "keywords": [
    "network",
    "data mining"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ioBroker/ioBroker.network-settings"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.2.2",
    "netmask": "^2.0.2",
    "node-wifi": "^2.0.16",
    "systeminformation": "^5.23.5"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@iobroker/eslint-config": "^0.1.6",
    "@iobroker/build-tools": "^2.0.5",
    "@iobroker/testing": "^5.0.0",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^7.1.8",
    "@types/gulp": "^4.0.17",
    "@types/mocha": "^10.0.8",
    "@types/node": "^22.7.4",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "axios": "^1.7.7",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "gulp": "^4.0.2",
    "mocha": "^10.7.3",
    "proxyquire": "^2.1.3",
    "sinon": "^19.0.2",
    "sinon-chai": "^3.7.0"
  },
  "os": [
    "linux"
  ],
  "main": "main.js",
  "files": [
    "admin/",
    "lib/",
    "data/",
    "wlan_rights.sh",
    "!lib/adapter-config.d.ts",
    "io-package.json",
    "LICENSE",
    "main.js"
  ],
  "scripts": {
    "test:js": "mocha \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "prepublishOnly": "node node_modules/gulp/bin/gulp.js",
    "lint": "eslint -c eslint.config.mjs",
    "build": "gulp",
    "release": "release-script patch --yes --no-update-lockfile",
    "release-patch": "release-script patch --yes --no-update-lockfile",
    "release-minor": "release-script minor --yes --no-update-lockfile ",
    "release-major": "release-script major --yes --no-update-lockfile",
    "update-packages": "ncu --upgrade && cd src && ncu --upgrade && cd ..",
    "npm": "npm i && cd src && npm i -f"
  },
  "bugs": {
    "url": "https://github.com/ioBroker/ioBroker.network-settings/issues"
  },
  "readmeFilename": "README.md"
}
