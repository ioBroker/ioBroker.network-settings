    "chai-as-promised": "^7.1.1",
    "eslint": "^8.43.0",
    "gulp": "^4.0.2",
    "mocha": "^10.2.0",
    "proxyquire": "^2.1.3",
    "sinon": "^15.2.0",
    "sinon-chai": "^3.7.0",
